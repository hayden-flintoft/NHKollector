[Unit]
Description=NHKollector Service
After=network.target

[Service]
Type=simple
User=your-user
WorkingDirectory=/home/hflin/NHKollector
ExecStart=/usr/bin/node service/nhk-service.js
Restart=always
RestartSec=10
Environment=NODE_ENV=production

# Output to journal
StandardOutput=journal
StandardError=journal
SyslogIdentifier=nhkollector

[Install]
WantedBy=multi-user.target